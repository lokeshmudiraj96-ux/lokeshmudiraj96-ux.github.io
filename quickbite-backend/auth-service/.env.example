# Auth Service Environment Variables

# Server
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://quickbite:password@localhost:5432/auth_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (CHANGE IN PRODUCTION)
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production-123456
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-789012
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# AWS (for SMS via SNS - optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret

# Twilio (alternative SMS provider - optional)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=your_twilio_phone
